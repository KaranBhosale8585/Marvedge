generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  tours     Tour[]
  createdAt DateTime @default(now())
}

model Tour {
  id        String      @id @default(uuid())
  title     String
  steps     TourStep[]
  isPublic  Boolean     @default(false)
  userId    String
  user      User        @relation(fields: [userId], references: [id])
  createdAt DateTime    @default(now())
}

model TourStep {
  id          String   @id @default(uuid())
  title       String
  description String
  mediaUrl    String?   // Image or Video URL
  order       Int       // Position in sequence
  tags        String[]  // Tags or categories
  duration    Int?      // Estimated duration in seconds or minutes
  interactive Json?     // Store interactive elements (clicks, forms, etc.)
  tourId      String
  tour        Tour      @relation(fields: [tourId], references: [id])
  createdAt   DateTime  @default(now())
}